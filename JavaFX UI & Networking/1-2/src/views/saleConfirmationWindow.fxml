<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="118.0" prefWidth="555.0" style="-fx-background-color: #292736;" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.SaleConfirmationWindowController">
   <children>
      <Label fx:id="playerNameLabel" layoutX="22.0" layoutY="23.0" text="Set a Selling Price for MS Dhoni" textFill="WHITE" AnchorPane.leftAnchor="15.0">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="playerPriceTextField" alignment="CENTER" layoutX="334.0" layoutY="21.0" prefHeight="25.0" prefWidth="156.0" promptText="Type a real value (in USD)" style="-fx-background-color: #CECECE; -fx-background-radius: 10;" />
      <Button fx:id="priceClearButton" layoutX="498.0" layoutY="21.0" mnemonicParsing="false" onAction="#clearPriceTextField" style="-fx-background-color: #FFECA1; -fx-background-radius: 10;" text="Clear" AnchorPane.rightAnchor="15.0" />
      <Button fx:id="confirmSaleButton" layoutX="180.0" layoutY="72.0" mnemonicParsing="false" onAction="#confirmSale" prefHeight="30.0" prefWidth="102.0" style="-fx-background-color: #EC3B3B; -fx-background-radius: 20;" text="Confirm Sale" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="273.0">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="undoSaleButton" layoutX="299.0" layoutY="72.0" mnemonicParsing="false" onAction="#undoSale" style="-fx-background-radius: 20; -fx-background-color: #37DA22;" text="Undo Sale">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
